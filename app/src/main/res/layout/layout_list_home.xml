<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="@dimen/margin_normal"
        android:id="@+id/home_messagelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/home_datelayout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="20"
                android:id="@+id/home_date"
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Dec 2018"
                android:id="@+id/home_monthyear"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="17:30"
                android:id="@+id/home_time"
                android:textStyle="italic"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:id="@+id/home_verticalline"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/home_datelayout"
            android:layout_alignBottom="@id/home_datelayout"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_toEndOf="@id/home_datelayout"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/home_message"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_toEndOf="@id/home_verticalline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/home_imagelayout"
        android:layout_below="@+id/home_messagelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="@dimen/margin_normal"
            android:visibility="gone"
            android:src="@mipmap/ic_launcher_round"
            android:id="@+id/home_image"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="2:1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>